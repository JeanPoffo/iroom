<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".view.FiltroActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageButtonFiltro"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_search"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/textViewFiltroPalavraChave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Palavra Chave"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextFiltroPalavraChave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Barato, Dois Quartos, Florianópolis..."
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/textViewFiltroLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Local"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextFiltroLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Estabelecimentos Próximos?"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/textViewFiltroPreco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preço"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seekBarFiltroPreco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="2000"
        android:progressTint="@color/colorPrimaryDark" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/textViewPerfilLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Local"
        android:textSize="18sp" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.FiltroActivity" />

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>